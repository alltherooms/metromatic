{
    "extends": "airbnb-base",
    "env": {
        "commonjs": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-param-reassign": 0
    },
    "globals": {
        "beforeEach": true,
        "it": true,
        "describe": true
    }
}
